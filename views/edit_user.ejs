<%- include('layout/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-header bg-success">
                <h1 class="text-light">Edit User (<%= user.name %>)</h1>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <form id="addUserForm" action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone %>" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="image" class="form-label">Image</label>
                            <input type="file" class="form-control" id="image" name="image">
                            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= user.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
                        </div>
                    </form>
                    <div class="alert alert-success mt-3 d-none" id="successMessage"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>

